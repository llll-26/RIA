<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.student.mapper.BizRewardItemMapper">

    <resultMap type="BizRewardItem" id="BizRewardItemResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="pointsRequired"    column="points_required"    />
        <result property="type"    column="type"    />
        <result property="stock"    column="stock"    />
        <result property="isActive"    column="is_active"    />
        <result property="description"    column="description"    />
        <result property="imageUrl"    column="image_url"    />
    </resultMap>

    <sql id="selectBizRewardItemVo">
        select id, name, points_required, type, stock, is_active, description, image_url from biz_reward_item
    </sql>

    <select id="selectBizRewardItemList" parameterType="BizRewardItem" resultMap="BizRewardItemResult">
        <include refid="selectBizRewardItemVo"/>
        <where>
            <if test="id != null "> and id = #{id}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="pointsRequired != null "> and points_required = #{pointsRequired}</if>
            <if test="type != null "> and type = #{type}</if>
            <if test="stock != null "> and stock = #{stock}</if>
            <if test="isActive != null "> and is_active = #{isActive}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="imageUrl != null  and imageUrl != ''"> and image_url = #{imageUrl}</if>
        </where>
    </select>

    <select id="selectBizRewardItemById" parameterType="Long" resultMap="BizRewardItemResult">
        <include refid="selectBizRewardItemVo"/>
        where id = #{id}
    </select>

    <insert id="insertBizRewardItem" parameterType="BizRewardItem" useGeneratedKeys="true" keyProperty="id">
        insert into biz_reward_item
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="pointsRequired != null">points_required,</if>
            <if test="type != null">type,</if>
            <if test="stock != null">stock,</if>
            <if test="isActive != null">is_active,</if>
            <if test="description != null and description != ''">description,</if>
            <if test="imageUrl != null and imageUrl != ''">image_url,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="pointsRequired != null">#{pointsRequired},</if>
            <if test="type != null">#{type},</if>
            <if test="stock != null">#{stock},</if>
            <if test="isActive != null">#{isActive},</if>
            <if test="description != null and description != ''">#{description},</if>
            <if test="imageUrl != null and imageUrl != ''">#{imageUrl},</if>
         </trim>
    </insert>

    <update id="updateBizRewardItem" parameterType="BizRewardItem">
        update biz_reward_item
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="pointsRequired != null">points_required = #{pointsRequired},</if>
            <if test="type != null">type = #{type},</if>
            <if test="stock != null">stock = #{stock},</if>
            <if test="isActive != null">is_active = #{isActive},</if>
            <if test="description != null and description != ''">description = #{description},</if>
            <if test="imageUrl != null and imageUrl != ''">image_url = #{imageUrl},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBizRewardItemById" parameterType="Long">
        delete from biz_reward_item where id = #{id}
    </delete>

    <delete id="deleteBizRewardItemByIds" parameterType="String">
        delete from biz_reward_item where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <!-- 批量下架奖品 -->
    <update id="hideRewardItems">
        UPDATE biz_reward_item
        SET is_active = 0,
        update_time = NOW()
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>
