<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.student.mapper.BizServiceReviewMapper">
    
    <resultMap type="BizServiceReview" id="BizServiceReviewResult">
        <result property="id"    column="id"    />
        <result property="orderId"    column="order_id"    />
        <result property="reviewerId"    column="reviewer_id"    />
        <result property="reviewedId"    column="reviewed_id"    />
        <result property="rating"    column="rating"    />
        <result property="comment"    column="comment"    />
        <result property="createdAt"    column="created_at"    />
    </resultMap>

    <sql id="selectBizServiceReviewVo">
        select id, order_id, reviewer_id, reviewed_id, rating, comment, created_at from biz_service_review
    </sql>

    <select id="selectBizServiceReviewList" parameterType="BizServiceReview" resultMap="BizServiceReviewResult">
        <include refid="selectBizServiceReviewVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="reviewerId != null "> and reviewer_id = #{reviewerId}</if>
            <if test="reviewedId != null "> and reviewed_id = #{reviewedId}</if>
            <if test="rating != null "> and rating = #{rating}</if>
            <if test="comment != null  and comment != ''"> and comment = #{comment}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
        </where>
    </select>
    
    <select id="selectBizServiceReviewById" parameterType="Long" resultMap="BizServiceReviewResult">
        <include refid="selectBizServiceReviewVo"/>
        where id = #{id}
    </select>

    <insert id="insertBizServiceReview" parameterType="BizServiceReview" useGeneratedKeys="true" keyProperty="id">
        insert into biz_service_review
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="reviewerId != null">reviewer_id,</if>
            <if test="reviewedId != null">reviewed_id,</if>
            <if test="rating != null">rating,</if>
            <if test="comment != null">comment,</if>
            <if test="createdAt != null">created_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="reviewerId != null">#{reviewerId},</if>
            <if test="reviewedId != null">#{reviewedId},</if>
            <if test="rating != null">#{rating},</if>
            <if test="comment != null">#{comment},</if>
            <if test="createdAt != null">#{createdAt},</if>
         </trim>
    </insert>

    <update id="updateBizServiceReview" parameterType="BizServiceReview">
        update biz_service_review
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="reviewerId != null">reviewer_id = #{reviewerId},</if>
            <if test="reviewedId != null">reviewed_id = #{reviewedId},</if>
            <if test="rating != null">rating = #{rating},</if>
            <if test="comment != null">comment = #{comment},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBizServiceReviewById" parameterType="Long">
        delete from biz_service_review where id = #{id}
    </delete>

    <delete id="deleteBizServiceReviewByIds" parameterType="String">
        delete from biz_service_review where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>