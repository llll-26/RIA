<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.student.mapper.BizUserEnrollmentMapper">
    
    <resultMap type="BizUserEnrollment" id="BizUserEnrollmentResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="activityId"    column="activity_id"    />
        <result property="status"    column="status"    />
        <result property="enrolledAt"    column="enrolled_at"    />
        <result property="completedAt"    column="completed_at"    />
    </resultMap>

    <sql id="selectBizUserEnrollmentVo">
        select id, user_id, activity_id, status, enrolled_at, completed_at from biz_user_enrollment
    </sql>

    <select id="selectBizUserEnrollmentList" parameterType="BizUserEnrollment" resultMap="BizUserEnrollmentResult">
        <include refid="selectBizUserEnrollmentVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="activityId != null "> and activity_id = #{activityId}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="enrolledAt != null "> and enrolled_at = #{enrolledAt}</if>
            <if test="completedAt != null "> and completed_at = #{completedAt}</if>
        </where>
    </select>
    
    <select id="selectBizUserEnrollmentById" parameterType="Long" resultMap="BizUserEnrollmentResult">
        <include refid="selectBizUserEnrollmentVo"/>
        where id = #{id}
    </select>

    <insert id="insertBizUserEnrollment" parameterType="BizUserEnrollment" useGeneratedKeys="true" keyProperty="id">
        insert into biz_user_enrollment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="activityId != null">activity_id,</if>
            <if test="status != null">status,</if>
            <if test="enrolledAt != null">enrolled_at,</if>
            <if test="completedAt != null">completed_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="activityId != null">#{activityId},</if>
            <if test="status != null">#{status},</if>
            <if test="enrolledAt != null">#{enrolledAt},</if>
            <if test="completedAt != null">#{completedAt},</if>
         </trim>
    </insert>

    <update id="updateBizUserEnrollment" parameterType="BizUserEnrollment">
        update biz_user_enrollment
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="activityId != null">activity_id = #{activityId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="enrolledAt != null">enrolled_at = #{enrolledAt},</if>
            <if test="completedAt != null">completed_at = #{completedAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBizUserEnrollmentById" parameterType="Long">
        delete from biz_user_enrollment where id = #{id}
    </delete>

    <delete id="deleteBizUserEnrollmentByIds" parameterType="String">
        delete from biz_user_enrollment where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>