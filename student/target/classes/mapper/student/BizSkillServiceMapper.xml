<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.student.mapper.BizSkillServiceMapper">

    <resultMap type="BizSkillService" id="BizSkillServiceResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="title"    column="title"    />
        <result property="description"    column="description"    />
        <result property="coverImg"    column="cover_img"    />
        <result property="categoryId"    column="category_id"    />
        <result property="customCategory"    column="custom_category"    />
        <result property="availableTime"    column="available_time"    />
        <result property="pointsPerHour"    column="points_per_hour"    />
        <result property="status"    column="status"    />
        <result property="createdAt"    column="created_at"    />
    </resultMap>

    <sql id="selectBizSkillServiceVo">
        select id, user_id, title, description, cover_img, category_id, custom_category, available_time, points_per_hour, status, created_at from biz_skill_service
    </sql>

    <select id="selectBizSkillServiceList" parameterType="BizSkillService" resultMap="BizSkillServiceResult">
        <include refid="selectBizSkillServiceVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="coverImg != null  and coverImg != ''"> and cover_img = #{coverImg}</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="customCategory != null  and customCategory != ''"> and custom_category = #{customCategory}</if>
            <if test="availableTime != null  and availableTime != ''"> and available_time = #{availableTime}</if>
            <if test="pointsPerHour != null "> and points_per_hour = #{pointsPerHour}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
        </where>
    </select>

    <select id="selectBizSkillServiceById" parameterType="Long" resultMap="BizSkillServiceResult">
        <include refid="selectBizSkillServiceVo"/>
        where id = #{id}
    </select>
    <select id="selectSkillCount" resultType="long">
        SELECT COUNT(*)
        FROM biz_skill_service
        WHERE status = 1
    </select>

    <insert id="insertBizSkillService" parameterType="BizSkillService" useGeneratedKeys="true" keyProperty="id">
        insert into biz_skill_service
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="description != null and description != ''">description,</if>
            <if test="coverImg != null">cover_img,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="customCategory != null">custom_category,</if>
            <if test="availableTime != null">available_time,</if>
            <if test="pointsPerHour != null">points_per_hour,</if>
            <if test="status != null">status,</if>
            <if test="createdAt != null">created_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="description != null and description != ''">#{description},</if>
            <if test="coverImg != null">#{coverImg},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="customCategory != null">#{customCategory},</if>
            <if test="availableTime != null">#{availableTime},</if>
            <if test="pointsPerHour != null">#{pointsPerHour},</if>
            <if test="status != null">#{status},</if>
            <if test="createdAt != null">#{createdAt},</if>
         </trim>
    </insert>

    <update id="updateStatusById">
        UPDATE biz_skill_service
        SET status = #{status}
        WHERE id = #{id}
    </update>
    <delete id="deleteBizSkillServiceById" parameterType="Long">
        delete from biz_skill_service where id = #{id}
    </delete>

    <delete id="deleteBizSkillServiceByIds" parameterType="String">
        delete from biz_skill_service where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
