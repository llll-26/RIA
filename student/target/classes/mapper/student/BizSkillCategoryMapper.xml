<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.student.mapper.BizSkillCategoryMapper">
    
    <resultMap type="BizSkillCategory" id="BizSkillCategoryResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="sort"    column="sort"    />
        <result property="isActive"    column="is_active"    />
    </resultMap>

    <sql id="selectBizSkillCategoryVo">
        select id, name, sort, is_active from biz_skill_category
    </sql>

    <select id="selectBizSkillCategoryList" parameterType="BizSkillCategory" resultMap="BizSkillCategoryResult">
        <include refid="selectBizSkillCategoryVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="isActive != null "> and is_active = #{isActive}</if>
        </where>
    </select>
    
    <select id="selectBizSkillCategoryById" parameterType="Long" resultMap="BizSkillCategoryResult">
        <include refid="selectBizSkillCategoryVo"/>
        where id = #{id}
    </select>

    <insert id="insertBizSkillCategory" parameterType="BizSkillCategory" useGeneratedKeys="true" keyProperty="id">
        insert into biz_skill_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="sort != null">sort,</if>
            <if test="isActive != null">is_active,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="sort != null">#{sort},</if>
            <if test="isActive != null">#{isActive},</if>
         </trim>
    </insert>

    <update id="updateBizSkillCategory" parameterType="BizSkillCategory">
        update biz_skill_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="isActive != null">is_active = #{isActive},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBizSkillCategoryById" parameterType="Long">
        delete from biz_skill_category where id = #{id}
    </delete>

    <delete id="deleteBizSkillCategoryByIds" parameterType="String">
        delete from biz_skill_category where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>